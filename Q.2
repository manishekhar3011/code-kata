        Scanner sc = new Scanner(System.in);
        int a = sc.nextInt();
        int b = sc.nextInt();
        int c = sc.nextInt();
        int d = sc.nextInt();
        
        //..... YOUR CODE STARTS HERE .....
        
         // Operation 1: Add the first and second integer, then multiply by the third
        int result1 = (a + b) * c;

        // Operation 2: Subtract the fourth integer from the second, then divide by the first
        int result2 = (b - d) / a;

        // Operation 3: Multiply the first integer by the fourth, then add the third
        int result3 = (a * d) + c;

        // Operation 4: Add all four integers together and divide by two
